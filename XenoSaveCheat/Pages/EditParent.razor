@page "/{file}"
@inject NavigationManager NavManager

@switch(_fileType)
{
    case "XCDESave":
        <XCDESave File="@File" />
        break;
    case "XCDESettings":
    case "XC2Save":
    case "XC2Save100":
    case "XC2Save150":
    case "XC2SaveIra":
    case "XC2SaveIra150":
        <h2>NOT YET IMPLEMENTED</h2>
        break;
    case "XC3Save":
    case "XC3Save100":
    case "XC3Save120":
        <XC3Save File="@File" />
        break;
    case "XCSaveThumbnail":
        <XCSaveThumbnail File="@File" Width="@(dmm.XenoSave.XCSaveThumbnail.WIDTH * 2)" Height="@(dmm.XenoSave.XCSaveThumbnail.HEIGHT * 2)" />
        break;
    default:
        <h2>NOT SUPPORTED</h2>
        break;
}

