<MudGrid>
    <MudItem xs="6">
        <MudPaper Class="pa-6 ma-2">
            <MudText Typo="Typo.h4">General</MudText>
            <MudNumericField Margin="Margin.Dense" Label="Level" @bind-Value="Level" />
            <MudNumericField Margin="Margin.Dense" Label="EXP" @bind-Value="EXP" />
            <MudNumericField Margin="Margin.Dense" Label="AP" @bind-Value="AP" />
            <MudNumericField Margin="Margin.Dense" Label="Affinity Coins" @bind-Value="AffinityCoins" />
        </MudPaper>
    </MudItem>
    <MudItem xs="6">
        <MudPaper Class="pa-6 ma-2">
            <MudText Typo="Typo.h4">Expert Mode</MudText>
            <MudNumericField Margin="Margin.Dense" Label="Expert Mode Level" @bind-Value="ExpertModeLevel" />
            <MudNumericField Margin="Margin.Dense" Label="Expert Mode EXP" @bind-Value="ExpertModeEXP" />
            <MudNumericField Margin="Margin.Dense" Label="Expert Mode Reserve EXP" @bind-Value="ExpertModeReserveEXP" />
        </MudPaper>
    </MudItem>
</MudGrid>
                    